<div class="d-block text-center page-header">
    <h1 style="font-size: 55px;" class="font--primary text-white">{{blog.name}}</h1>
    <div class="router--detail color--white--no-hover pb-4 text-center pt-4">
        <a href="/" class="color--white text-decoration-none">Home </a>/
        <a href="/" class="color--white text-decoration-none">{{blog.category}} </a>/
        <span class="text-capitalize">{{blog.name}}</span>
    </div>
</div>
<div class="pt-4">
    <div class="container-xl mt-5">
        <div class="row flex-wrap-reverse">
            <div class="col-lg-3 col-md-3">
                <div class="sidebar">
                    <div class="sidebar__items mb-5">
                        <h4 class="font--primary mb-5">Categories</h4>
                        <ul class="mt-4 p-0">
                            {{#each (getCategory dataBlogs)}}
                            <li class="d-flex color--light--no-hover mb-3">
                                <a class="text-dark text--dark-hover text-decoration-none flex-grow-1" href="/blogs/category/{{this.slug}}">{{this.name}}</a>
                                <span>({{this.quantify}})</span>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="sidebar__items mb-5">
                        <h4 class="font--primary mb-5">Tags</h4>
                        <ul class="mt-4 p-0 d-flex flex-wrap">
                            <li class="me-2"> 
                                <a href="#" class="bg--white--hover border--primary text-decoration-none color--light pt-2 pb-2 pe-3 ps-3 mb-2 lh-1 d-inline-block">Accessories</a>
                            </li>
                            <li class="me-2">
                                <a href="#" class="bg--white--hover border--primary text-decoration-none color--light pt-2 pb-2 pe-3 ps-3 mb-2 lh-1 d-inline-block">Fashion</a>
                            </li>
                            <li class="me-2">
                                <a href="#" class="bg--white--hover border--primary text-decoration-none color--light pt-2 pb-2 pe-3 ps-3 mb-2 lh-1 d-inline-block">Lenosshoe</a>
                            </li>
                            <li class="me-2">
                                <a href="#" class="bg--white--hover border--primary text-decoration-none color--light pt-2 pb-2 pe-3 ps-3 mb-2 lh-1 d-inline-block">Men</a>
                            </li>
                            <li class="me-2">
                                <a href="#" class="bg--white--hover border--primary text-decoration-none color--light pt-2 pb-2 pe-3 ps-3 mb-2 lh-1 d-inline-block">Nixon</a>
                            </li>
                            <li class="me-2">
                                <a href="#" class="bg--white--hover border--primary text-decoration-none color--light pt-2 pb-2 pe-3 ps-3 mb-2 lh-1 d-inline-block">Shoes</a>
                            </li>
                            <li class="me-2">
                                <a href="#" class="bg--white--hover border--primary text-decoration-none color--light pt-2 pb-2 pe-3 ps-3 mb-2 lh-1 d-inline-block">Skyblue</a>
                            </li>
                            <li class="me-2">
                                <a href="#" class="bg--white--hover border--primary text-decoration-none color--light pt-2 pb-2 pe-3 ps-3 mb-2 lh-1 d-inline-block">Times</a>
                            </li>
                            <li class="me-2">
                                <a href="#" class="bg--white--hover border--primary text-decoration-none color--light pt-2 pb-2 pe-3 ps-3 mb-2 lh-1 d-inline-block">Waliity</a>
                            </li>
                            <li class="me-2">
                                <a href="#" class="bg--white--hover border--primary text-decoration-none color--light pt-2 pb-2 pe-3 ps-3 mb-2 lh-1 d-inline-block">Watches</a>
                            </li>
                        </ul>
                    </div>
                    <div class="sidebar__items mb-5">
                        <h4 class="font--primary mb-5">Recent Posts</h4>
                        <ul class="mt-4 p-0">
                            {{#each (limit dataBlogs 3)}}
                            <li class="d-flex mb-3">
                                <div class="recent-posts__items">
                                    <div class="d-flex align-items-center ">
                                        <div class="recent-posts__items--img overflow-hidden me-3">
                                            <img style="object-fit: cover; object-position: center" width="60px" height="60px" class="" src="{{this.image}}" alt="">
                                        </div>
                                        <div class="recent-posts__items--content fs-13">
                                            <a href="/blogs/{{this.slug}}" class="text--dark-hover text-dark text-decoration-none">{{this.name}}</a>
                                            <p class="color--light--no-hover text-uppercase mb-0">{{formatDate this.createdAt}}</p>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>   
            <div class="col-lg-9 col-md-9">
                <div class="blog">
                    <div class="posts__list">
                        <div class="posts__items">
                            <div class="posts mb-5 pb-5 border-bottom-primary">
                                <div class="posts--img overflow-hidden mb-4">
                                    <img style="object-fit: cover; object-position: center" class="w-100" src="{{blog.image}}" alt="">
                                </div>
                                <div class="posts--author mb-2 text-uppercase">
                                    <a href="#" class="color--primary-hover text-decoration-none text-capitalize">{{blog.category}}</a> -
                                    <span class="color--light--no-hover">{{formatDate blog.createdAt}}</span>
                                </div>
                                <div class="posts--content">
                                    {{blog.content}}
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="d-flex align-items-center">
                                        <span class=" text-uppercase pe-2">tags:</span>
                                        <p class=" color--light--no-hover m-0">
                                            <a class="color--light text-decoration-none" href="">Accessories</a>,
                                            <a class="color--light text-decoration-none" href="">Men</a>,
                                            <a class="color--light text-decoration-none" href="">Watches</a>
                                        </p>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <span class=" text-uppercase pe-2">share:</span>
                                        <p class=" color--light--no-hover m-0">
                                            <a style="color: #425894;" class="pe-2 text-decoration-none" href=""><i class="fa-brands fa-facebook-f"></i></a>
                                            <a style="color: #4ba6ee;" class="pe-2 text-decoration-none" href=""><i class="fa-brands fa-twitter"></i></a>
                                            <a style="color: #c23f3e;" class="pe-2 text-decoration-none" href=""><i class="fa-brands fa-pinterest-p"></i></a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form class="pt-5 mb-4">
                        <h3 class="font--primary">Leave Your Thought Here</h3>
                        <p class="m-0 color--light--no-hover"><i>Your email address will not be published. Required fields are marked *</i></p>
                        <div class="input--group mt-4 mb-4">
                            <label for="comment" class="pb-2">Comment</label>
                            <textarea type="text" name="comment" id="comment" class="w-100"></textarea>
                        </div>
                        <div class="input--group row">
                            <div class="col-6">
                                <label for="name" class="pb-2">Your Name<span class="text-danger">*</span></label>
                                <input class="w-100" type="text" name="name" id="name">
                            </div>
                            <div class="col-6">
                                <label for="email" class="pb-2">Your Email<span class="text-danger">*</span></label>
                                <input class="w-100" type="email" name="email" id="email">
                            </div>
                        </div>
                        <button style="padding: 12px" type="submit" class="btn--primary btn--light text-white text-uppercase border-0 pe-5 ps-5 mt-4">submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>    
</div>
<script>
    const postContent = document.querySelector('.posts--content');
    const string = postContent.innerText;
    postContent.innerHTML = string;
</script>