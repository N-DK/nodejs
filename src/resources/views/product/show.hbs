            for(var i = 0; i < tabPanes.length; i++) {
                if(tabPane == tabPanes[i]) {
                    tabItems[i].classList.add('active');
                    tabPanes[i].classList.add('active');
                }else {
                    tabItems[i].classList.remove('active');
                    tabPanes[i].classList.remove('active');
                }
            }
        })
    })
