<div class="d-block text-center page-header">
    <h1 style="font-size: 55px;" class="font--primary text-white">Cart</h1>
    <div class="router--detail color--white--no-hover pb-4 text-center pt-4">
        <a href="/" class="color--white text-decoration-none">Home </a>/
        <span class="text-capitalize">Cart</span>
    </div>
</div>
<div class="container mt-5 pb-5">
    <div class="pt-4">
        <p class="fs-13 color--primary mb-2 d-none">Your cart is currently empty.</p>
        <div class="row mb-5">
            <div class="col-9">
                <table class="table border--primary">
                    <tr>
                        <td></td>
                        <td class="font--primary">Product</td>
                        <td class="font--primary">Price</td>
                        <td class="font--primary">Quantify</td>
                        <td class="font--primary">Subtotal</td>
                    </tr>
                    {{#each carts}}
                    <tr>
                        <td>
                            <div class="cart__product d-flex align-items-center pt-3 pb-3">
                                <div class="cart__product--clear ps-3 pe-3">
                                    <i class="fa-solid fa-xmark"></i>
                                </div>
                                <div class="cart__product--img me-3">
                                    <a href="#">
                                        <img width="80px" height="80px" src="{{this.product_image}}" alt="">
                                    </a>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="cart__product pt-3 pb-3">
                                <div style="height: 80px" class=" d-flex align-items-center cart__product--img me-3">
                                    <a href="#" class="text--dark-hover text-dark text-decoration-none mb-1 d-inline-block">{{this.product_name}}</a>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="cart__product pt-3 pb-3">
                                <div style="height: 80px" class=" d-flex align-items-center cart__product--img me-3">
                                    <span>${{this.product_price}}</span>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div style="width: 130px" class="cart__product pt-3 pb-3">
                                <div style="height: 80px" class=" d-flex align-items-center cart__product--img me-3">
                                    <div class="form-type-number border--primary d-flex h-50 align-items-center pe-3 ps-3">
                                        <div class="btn-minus fs-6">
                                            <i class="fa-solid fa-minus"></i>
                                        </div>
                                        <input value="{{this.quantify}}" class="w-100 h-100 border-0 text-center" id="quantity" min="1" name="quantity" type="number" />
                                        <div class="btn-plus fs-6 ">
                                            <i class="fa-solid fa-plus"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="cart__product pt-3 pb-3">
                                <div style="height: 80px" class=" d-flex align-items-center cart__product--img me-3">
                                    <span>${{this.total_price}}</span>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </table>
                <div style="width: 400px; height: 50px" class="d-flex overflow-hidden">
                    <div style="width: 60%" class="input--group">
                        <input type="text" name="" class="h-100 w-100 d-flex algin-items-center lh-1" id="" placeholder="Coupon code">
                    </div>
                    <button type="submit" class=" flex-grow-1 btn--primary btn--light text-white text-uppercase border-0 pt-2 pb-2">apply coupon</button>
                </div>
            </div>
            <div class="col-3">
                <div style="background-color: #f8f8f8;" class="cart--total">
                    <h5 style="background-color: #eeeeee;" class="font--primary p-3">Cart Totals</h5>
                    <div class="p-3">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span>Subtotal</span>
                            <span class="fs-4">$11,125</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span>Total</span>
                            <span class="fs-4 fw-bold">$11,125</span>
                        </div>
                        <button type="submit" class="mt-3 btn--primary btn--light text-white text-uppercase border-0 pt-2 pb-2 w-100 mb-2">proceed to checkout</button>
                    </div>
                </div>
            </div>
        </div>
        <a href="/" class="fw-bold text-decoration-none text-dark text--dark-hover">Return to shop</a>
    </div>
</div>
<script>
    $('.btn-plus, .btn-minus').on('click', function(e) {
        const isNegative = $(e.target).closest('.btn-minus').is('.btn-minus');
        const input = $(e.target).closest('.form-type-number').find('input');
        if (input.is('input')) {
            input[0][isNegative ? 'stepDown' : 'stepUp']()
        }
    })
</script>